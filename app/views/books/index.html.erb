<body>
  <p id=notice></p>
  <h1>Books</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <% @books.each do |book| %>

      <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <a href="#">Show</a>
          </td>
          <td>
            <a href="#">Edit</a>
          </td>
          <td>
            <a href="#">Destroy</a>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>

    <h2>New book</h2>
    <div class="new_book">
      <%= form_with model:@book,local:true do |f| %>
      <div class="field">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label>Body</label>
        <%= f.text_area :body %>
      </div>
      <div class="action">
      <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </div>
</body>
