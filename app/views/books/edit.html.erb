<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= @book.errors.count %> errors prohibited this obj from being saved
      </h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
        </ul>
    </div>
    <% end %>
<!-- form_with部分 -->
<%= form_with model:@book,url:"/books/#{@book.id}" ,local: true do |f| %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>
<p class="link inline"><%= link_to "Show",book_path(@book) %></p>
|
<p class="link inline"><%= link_to "Back",books_path %></p>
